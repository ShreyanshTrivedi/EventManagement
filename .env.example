# Copy this file to .env and adjust values as needed.

# Ports exposed on your host machine
FRONTEND_PORT=5173
BACKEND_PORT=8080
MYSQL_PORT=3307

# MySQL container
MYSQL_DATABASE=campus_events
MYSQL_ROOT_PASSWORD=root

# Spring Boot datasource (inside Docker use host "mysql")
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/campus_events?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=root

# JWT secret used by backend
APP_SECURITY_JWTSECRET=change-this-dev-secret-at-least-32-chars-long

# Frontend API base URL (browser hits your host port mapping)
VITE_API_BASE_URL=http://localhost:8080
